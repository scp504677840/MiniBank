<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.scp.minibank.utils.ViewPagerCompat
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.scp.minibank.utils.ViewPagerCompat>

    <Button
        android:id="@+id/guide_toregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/white_selector"
        android:text="@string/gui_btn_register"
        android:visibility="gone" />

    <Button
        android:id="@+id/guide_tologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/guide_toregister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_selector"
        android:text="@string/gui_btn_login"
        android:visibility="gone" />

</RelativeLayout>