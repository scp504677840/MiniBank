<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56ABE4"
    android:orientation="vertical" >

    <!-- 用户名 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/white_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/login_user_40x40" />

        <EditText
            android:id="@+id/login_account_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/login_account_edittext_hint"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 密码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/white_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/login_password_40x40" />

        <EditText
            android:id="@+id/login_password_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/login_password_edittext_hint"
            android:maxLength="20"
            android:password="true"
            android:singleLine="true"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 登录按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_tologin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/login_tologin_button_text" />
    </LinearLayout>

</LinearLayout>